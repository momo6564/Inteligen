{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { 
      "src": "/(.*)", 
      "dest": "client/build/$1" 
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "https://web-production-d6ff5.up.railway.app/api",
    "CI": "false"
  }
} 